<?xml version="1.0" encoding="utf-8"?>

<LinearLayout
    android:id="@+id/recipe_slide"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.ldnr.recettes.Activities.PrintRecipe"
    android:orientation="vertical"
    android:gravity="center">

    <TextView
        android:padding="16dp"
        android:id="@+id/p_recipe_title"
        android:textStyle="bold"
        android:textSize="30sp"
        android:textColor="#fff"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:layout_margin="5dp"
        android:id="@+id/p_recipe_picture"/>

    <TextView
        android:padding="16dp"
        android:id="@+id/p_recipe_description"
        android:textAlignment="center"
        android:textSize="14sp"
        android:textColor="#fff"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <TextView
        android:padding="16dp"
        android:id="@+id/p_recipe_ing"
        android:textStyle="bold"
        android:textSize="20sp"
        android:textColor="#fff"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <ListView
        android:id="@+id/p_recipe_ing_list"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <ListView
        android:id="@+id/p_recipe_step_list"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

</LinearLayout>